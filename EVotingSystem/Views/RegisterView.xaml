<UserControl x:Class="EVotingSystem.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:EVotingSystem.Views">

	<StackPanel Margin="40" Width="300" HorizontalAlignment="Center">

		<!-- Back button -->
		<Button Content="← Back"
                HorizontalAlignment="Left"
                Margin="0,0,0,20"
                Click="Back_Click"/>

		<TextBlock Text="Registracija"
                   FontSize="26"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

		<!-- Account type selection -->
		<StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

			<Button Content="Organizator"
                    Width="120"
                    Margin="0,0,10,0"
                    Click="Organizer_Click"/>

			<Button Content="Glasač"
                    Width="120"
                    Click="Voter_Click"/>
		</StackPanel>

		<!-- Dynamic form -->
		<ContentControl x:Name="FormContent"/>

		<!-- Register button -->
		<Button x:Name="RegisterButton"
            Content="Register"
            Height="35"
            Margin="0,20,0,0"
            Click="Register_Click"
		/>


	</StackPanel>
</UserControl>
