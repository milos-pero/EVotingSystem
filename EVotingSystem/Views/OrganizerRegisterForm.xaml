<UserControl x:Class="EVotingSystem.Views.OrganizerRegisterForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<StackPanel>

		<TextBlock Text="Naziv organizacije"/>
		<TextBox x:Name="OrganizationNameTextBox"
				 Height="25"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,15"/>

		<TextBlock Text="Identifikacioni broj"/>
		<TextBox x:Name="OrganizationIdTextBox"
				 Height="25"
                 VerticalContentAlignment="Center"
                 Margin="0,5,0,15"/>

		<TextBlock Text="Lozinka"/>
		<PasswordBox x:Name="PasswordBox"
					 Height="25"
                     Margin="0,5,0,15"/>

	</StackPanel>
</UserControl>
